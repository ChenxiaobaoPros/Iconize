    <PackageReference Include="Xam.Plugin.Iconize.Material" Version="2.0.0-beta" />
    <PackageReference Include="Xam.Plugin.Iconize.Meteocons" Version="2.0.0-beta" />
    <PackageReference Include="Xam.Plugin.Iconize.SimpleLineIcons" Version="2.0.0-beta" />
    <PackageReference Include="Xam.Plugin.Iconize.Typicons" Version="2.0.0-beta" />
    <PackageReference Include="Xam.Plugin.Iconize.WeatherIcons" Version="2.0.0-beta" />
    <PackageReference Include="Xamarin.Forms" Version="2.3.5.239-pre3" />
  </ItemGroup>

</Project>